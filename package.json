{
    "name": "qore-debug-vscode",
    "displayName": "Qore Debug",
    "version": "0.1.0",
    "publisher": "qoretechnologies",
    "description": "Qore language debugging support for VS Code",
    "author": {
        "name": "Ond≈ôej Musil",
        "email": "ondrej.musil@qoretechnologies.com"
    },
    "license": "SEE LICENSE IN LICENSE.txt",
    "engines": {
        "vscode": "^1.30.0",
        "node": "^7.9.0"
    },
    "categories": [
        "Debuggers"
    ],
    "homepage": "https://github.com/qorelanguage/qore-debug-vscode",
    "repository": {
        "type": "git",
        "url": "https://github.com/qorelanguage/qore-debug-vscode"
    },
    "bugs": {
        "url": "https://github.com/qorelanguage/qore-debug-vscode/issues"
    },
    "dependencies": {
        "vscode-debugprotocol": "^1.24.0",
        "vscode-debugadapter": "^1.24.0"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.44",
        "@types/node": "^6.0.50",
        "mocha": "^5.2.0",
        "tslint": "^5.8.0",
        "typescript": "^2.5.3",
        "vsce": "^1.31.2",
        "vscode": "^1.1.13",
        "vscode-debugadapter-testsupport": "^1.24.0"
    },
    "scripts": {
        "prepublish": "tsc -p ./src",
        "compile": "tsc -p ./src",
        "tslint": "tslint ./src/**/*.ts",
        "watch": "tsc -w -p ./src",
        "test": "mocha -u tdd ./out/tests/",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "package": "vsce package",
        "publish": "vsce publish"
    },
    "main": "./out/extension",
    "activationEvents": [
        "onDebug",
        "onCommand:extension.qore-debug-vscode.getFilename",
        "onCommand:extension.qore-debug-vscode.getConnection",
        "onCommand:extension.qore-debug-vscode.getProgram",
        "onCommand:extension.qore-debug-vscode.pickLoadedScript"
    ],
    "contributes": {
        "views": {
            "debug": [
                {
                    "id": "extension.qore-debug-vscode.programExplorer",
                    "name": "%program.explorer.view.name%",
                    "when": "inDebugMode && showProgramScriptsExplorer"
                }
            ]
        },
        "commands": [
            {
                "command": "extension.qore-debug-vscode.pickSourceCode",
                "title": "%pick.source.code%",
                "category": "Debug"
            }
        ],
        "breakpoints": [
            {
                "language": "qore"
            }
        ],
        "debuggers": [
            {
                "type": "qore",
                "label": "Qore Debug",
                "program": "./qvscdbg-",
                "args": [
                    "-vvv"
                ],
                "runtime": "qore",
                "languages": [
                    "qore"
                ],
                "variables": {
                    "AskForFilename": "extension.qore-debug-vscode.getFilename",
                    "AskForConnection": "extension.qore-debug-vscode.getConnection",
                    "AskForProgram": "extension.qore-debug-vscode.getProgram"
                },
                "configurationSnippets": [
                    {
                        "label": "Qore Debug: Launch",
                        "description": "A new configuration for launching a Qore debug program",
                        "body": {
                            "type": "qore",
                            "request": "launch",
                            "name": "${2:Launch Program}",
                            "program": "^\"\\${workspaceFolder}/${1:Program}\""
                        }
                    },
                    {
                        "label": "Qore Debug: Attach",
                        "description": "A new configuration for attaching a remote Qore debug server",
                        "body": {
                            "type": "qore",
                            "request": "attach",
                            "name": "${2:Attach debug server}",
                            "connection": "ws://add_my_address/debug",
                            "program": "my_program"
                        }
                    }
                ],
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "program"
                        ],
                        "properties": {
                            "program": {
                                "type": "string",
                                "description": "Absolute path to a text file.",
                                "default": "${workspaceFolder}/${command:AskForFilename}"
                            },
                            "logFilename": {
                                "type": "string",
                                "description": "Logging filename"
                            },
                            "appendToLog": {
                                "type": "boolean",
                                "description": "Append to log file",
                                "default": false
                            },
                            "fullException": {
                                "type": "boolean",
                                "description": "Provide full decription info",
                                "default": false
                            },
                            "define": {
                                "type": "array",
                                "description": "set the define parse values",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "parseOptions": {
                                "type": "array",
                                "description": "Set parse options, e.g. no-database",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "timeZone": {
                                "type": "string",
                                "description": "set the time zone"
                            },
                            "verbosity": {
                                "type": "integer",
                                "description": "Verbosity level of Debug Adapter Protocol.",
                                "default": 0
                            },
                            "stopOnEntry": {
                                "type": "boolean",
                                "description": "Automatically stop after launch.",
                                "default": true
                            }
                        }
                    },
                    "attach": {
                        "required": [
                            "program",
                            "connection"
                        ],
                        "properties": {
                            "connection": {
                                "type": "string",
                                "description": "URL or connection name to connect remote debug server, e.g. ws://socket=<url_encoded_path>/path",
                                "default": "${command:AskForConection}"
                            },
                            "program": {
                                "type": "string",
                                "description": "Program name or id",
                                "default": "${command:AskForProgram}"
                            },
                            "logFilename": {
                                "type": "string",
                                "description": "Logging filename"
                            },
                            "appendToLog": {
                                "type": "boolean",
                                "description": "Append to log file",
                                "default": false
                            },
                            "fullException": {
                                "type": "boolean",
                                "description": "Provide full decription info",
                                "default": false
                            },
                            "verbosity": {
                                "type": "integer",
                                "description": "Verbosity level of Debug Adapter Protocol.",
                                "default": 0
                            },
                            "maxRedir": {
                                "type": "integer",
                                "description": "The maximum number of redirects before throwing an exception (the default is 5)"
                            },
                            "proxy": {
                                "type": "string",
                                "description": "The proxy URL for connecting through a proxy"
                            },
                            "timeout": {
                                "type": "integer",
                                "description": "The HTTP timeout in ms"
                            },
                            "connTimeout": {
                                "type": "integer",
                                "description": "The timeout for establishing a new socket connection"
                            },
                            "respTimeout": {
                                "type": "integer",
                                "description": "The timeout to wait for websocket response"
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "qore",
                        "request": "launch",
                        "name": "Ask for file name",
                        "program": "${workspaceFolder}/${command:AskForFilename}"
                    },
                    {
                        "type": "qore",
                        "request": "attach",
                        "name": "Ask for conection and program",
                        "connection": "${command:AskForConnection}",
                        "program": "${command:AskForProgram}"
                    }
                ]
            }
        ]
    }
}
